{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      // This mapping is relative to "baseUrl"
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@icons/*": ["src/icons/*"],
      "@icons": ["src/icons/"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles/"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils/"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types/"],
      "@sections/*": ["src/sections/*"]
    }
  },
  "include": ["./src/**/*"]
}
